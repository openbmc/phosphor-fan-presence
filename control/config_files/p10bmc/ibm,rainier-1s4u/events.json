[
   {
     // Hold fans at the given target when a number of fans are missing.
     "name": "fan(s) missing",
     "groups": [
       {
         "name": "fan inventory",
         "interface": "xyz.openbmc_project.Inventory.Item",
         "property": { "name": "Present" }
       }
     ],
     "triggers": [
       {
         "class": "init",
         "method": "get_properties"
       },
       {
         "class": "signal",
         "signal": "properties_changed"
       }
     ],
     "actions": [
       {
         "name": "count_state_before_target",
         "count": 1,
         "state": false,
         "target": 10000
       }
     ]
   },
   {
     // Hold fans at the given target when a number of fans are nonfunctional.
     "name": "fan(s) faulted",
     "groups": [
       {
         "name": "fan inventory",
         "interface": "xyz.openbmc_project.State.Decorator.OperationalStatus",
         "property": { "name": "Functional" }
       }
     ],
     "triggers": [
       {
         "class": "init",
         "method": "get_properties"
       },
       {
         "class": "signal",
         "signal": "properties_changed"
       }
     ],
     "actions": [
       {
         "name": "count_state_before_target",
         "count": 1,
         "state": false,
         "target": 10000
       }
     ]
   },
   {
    // Set the floor based on the power mode
     "name": "power mode floor",
     "groups": [
      {
        "name": "power mode",
        "interface": "xyz.openbmc_project.Control.Power.Mode",
        "property": { "name": "PowerMode" }
      },
      {
        "name": "ambient temp",
        "interface": "xyz.openbmc_project.Sensor.Value",
        "property": {
          "name": "Value"
        }
      }
     ],
     "triggers": [
       {
         "class": "init",
         "method": "get_properties"
       },
       {
         "class": "signal",
         "signal": "properties_changed"
       }
     ],
     "actions": [
       {
         "name": "mapped_floor",
         "key_group": "ambient temp",
         "fan_floors": [
          {
            // Entry valid for temps < 27
            "key": 27,
            "floors": [
              {
                "group": "power mode",
                "floors": [
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.MaximumPerformance",
                    "floor": 2600
                  },
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.PowerSaving",
                    "floor": 2600
                  },
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.Static",
                    "floor": 2600
                  },
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.OEM",
                    "floor": 2600
                  }
                ]
              }
            ]
          },
          {
            // Entry valid for temps >= 27
            "key": 255,
            "floors": [
              {
                "group": "power mode",
                "floors": [
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.MaximumPerformance",
                    "floor": 8000
                  },
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.PowerSaving",
                    "floor": 8000
                  },
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.Static",
                    "floor": 8000
                  },
                  {
                    "value": "xyz.openbmc_project.Control.Power.Mode.PowerMode.OEM",
                    "floor": 8000
                  }
                ]
              }
            ]
          }
        ]
       }
     ]
   }
]
