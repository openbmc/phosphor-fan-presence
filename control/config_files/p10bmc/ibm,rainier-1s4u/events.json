       },
       {
         "class": "signal",
         "signal": "interfaces_added"
       },
       {
         "class": "signal",
         "signal": "properties_changed"
       }
     ],
     "actions": [
       {
         "name": "set_parameter_from_group_max",
         "parameter_name": "proc_0_core_dvfs_temp",
         "modifier": {
             "operator": "minus",
             "value": 3
         }
       }
     ]
   },
